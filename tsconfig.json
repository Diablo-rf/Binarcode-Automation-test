{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "playwright"]
  },
  "include": [
    "playwright.config.ts",
    "tests/**/*.ts",
    "page-objects/**/*.ts",
    "playwright/.auth/*.json"
  ],
  "exclude": ["dist"]
}